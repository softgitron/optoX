    "version": "0.2.0",
    "configurations": [
        
        {
            "preLaunchTask": "Start gateway debug",
            "name": "Debug gateway",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "showLog": true,
            "trace": "verbose",
            "cwd": "${workspaceFolder}/src/gateway",
            "remotePath": "/app",
            "port": 40000,
            "host": "localhost"
        },
        {
            "name": "Launch current go application locally",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {},
            "args": []
        }
    ]
}